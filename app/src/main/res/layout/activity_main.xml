<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondo2"
    android:elevation="0dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.frank.myapplication.MainActivity">


    <TextView
        android:id="@+id/tvf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="51dp"
        android:layout_toLeftOf="@+id/tv1"
        android:layout_toStartOf="@+id/tv1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="16dp"
        android:layout_y="150dp"
        android:text="Pico y placa "
        android:textColor="@android:color/background_dark"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="41dp"
        android:layout_y="192dp"
        android:text="Para hoy"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="114dp"
        android:layout_height="111dp"
        android:layout_x="230dp"
        android:layout_y="136dp"
        android:elevation="24dp"
        app:srcCompat="@mipmap/cal" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="98dp"
        android:layout_height="93dp"
        android:layout_above="@+id/textView5"
        android:layout_marginBottom="140dp"
        android:layout_toLeftOf="@+id/tvtitle"
        android:layout_toStartOf="@+id/tvtitle"
        android:layout_x="16dp"
        android:layout_y="19dp"
        app:srcCompat="@mipmap/date" />

    <TextView
        android:id="@+id/tvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/tv1"
        android:layout_alignRight="@+id/tv1"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_x="116dp"
        android:layout_y="32dp"
        android:fontFamily="sans-serif"
        android:text="MI Pico y placa"
        android:textColor="@android:color/background_dark"
        android:textSize="37sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_above="@+id/tv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp"
        android:layout_weight="0.03"
        android:layout_x="5dp"
        android:layout_y="425dp"
        android:text="Su próximo día de Pico y Placa es:"
        android:textColor="@android:color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="287dp"
        android:layout_height="239dp"
        android:layout_x="47dp"
        android:layout_y="215dp"
        app:srcCompat="@mipmap/lobg" />

    <TextView
        android:id="@+id/tv_picoyplaca"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_x="125dp"
        android:layout_y="375dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/tv_proximo_dia"
        android:layout_alignStart="@+id/tv_proximo_dia"
        android:layout_marginBottom="64dp"
        android:layout_weight="0.03"
        android:layout_x="165dp"
        android:layout_y="291dp"
        android:text="Mi placa"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="6dp"
        android:layout_y="490dp"
        android:text=" Horario de restriccion de 7:30am - 7:30 pm  "
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_proximo_dia"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.03"
        android:layout_x="68dp"
        android:layout_y="454dp"
        android:textColor="@android:color/holo_red_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="94dp"
        android:layout_height="64dp"
        android:layout_x="237dp"
        android:layout_y="176dp"
        android:background="@color/colorAccent"
        android:elevation="0dp"
        android:text=" #-# "
        android:textColor="@android:color/holo_red_light"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvtitle"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="46dp"
        android:layout_toEndOf="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_x="142dp"
        android:layout_y="76dp"
        android:fontFamily="cursive"
        android:text="San Juan de Pasto."
        android:textColor="#3F51B5"
        android:textSize="27sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_placa"
        android:layout_width="87dp"
        android:layout_height="55dp"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"
        android:layout_x="159dp"
        android:layout_y="309dp"
        android:text="  "
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button"
        android:layout_width="39dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_x="329dp"
        android:layout_y="467dp"
        android:background="@mipmap/iconconf"
        android:onClick="configuracion"
        android:textSize="13sp"
        android:textStyle="bold" />

</AbsoluteLayout>
